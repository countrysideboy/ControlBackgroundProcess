<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/float_show_act_info_ll"
        android:background="@color/transhalf33"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:id="@+id/float_show_act_info_btn_ss"
                android:textColor="@color/white"
                android:background="@color/transhalf33"
                android:text="隐藏"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:background="@color/transhalf33"
                android:textColor="@color/white"
                android:id="@+id/float_show_act_info_btn_qk"
                android:text="清空"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:background="@color/transhalf33"
                android:id="@+id/float_show_act_info_btn_gb"
                android:textColor="@color/white"
                android:text="关闭"/>

        </LinearLayout>
        <TextView
            android:id="@+id/float_show_act_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:textColor="@color/white"
            android:text="" />

    </LinearLayout>

</FrameLayout>