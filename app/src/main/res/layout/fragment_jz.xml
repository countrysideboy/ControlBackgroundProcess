<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/jzScreen"
    tools:context=".fragment.JuanZengFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2" >

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/alert_backgroundshape"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你的支持是更新软件解决bug的动力,希望大家可以用各种方式来支持本软件的开发（捐赠、评分、评论区互相帮助、共建和谐氛围等都算）。"
                    android:layout_margin="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击这里复制吱口令:3kGZ0948kN"
                    android:id="@+id/jz_zkl"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝账号：418560128@qq.com(点击复制)"
                    android:id="@+id/jz_zfb"
                    android:layout_marginLeft="4dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:src="@drawable/zfb"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信账号:Van418(点击复制)"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/jz_wx"
                    android:layout_marginTop="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:src="@drawable/wx"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal" />
                <LinearLayout
                    android:id="@+id/ar_fl"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@drawable/line" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp" >

                        <Switch
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="修复ARStickers变形"
                            android:id="@+id/ar_change_sw"
                            android:checked="false" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:visibility="gone"
                        android:background="@drawable/line" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:layout_marginLeft="4dp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="AR图像质量:低(360*640)\n(性能差的调低不然很卡)"
                            android:id="@+id/ar_qua_grivaty"
                            android:textAlignment="gravity"
                            android:gravity="center_vertical" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>
