<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="16">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--<ImageView-->
                <!--android:layout_width="44dp"-->
                <!--android:layout_height="44dp"-->
                <!--android:background="@drawable/round"-->
                <!--android:id="@+id/item_doze_appicon"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_marginBottom="5dp" />-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_doze_appicon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:civ_border_width="2px"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_overlay="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_doze_iceicon"
                android:src="@mipmap/ice" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/item_doze_appname"
            android:textStyle="bold"
            android:maxLines="2"
            android:maxLength="25"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_doze_openstop_tv"
        android:layout_weight="4"
        android:src="@mipmap/icon_notdisable"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_doze_off_tv"
        android:layout_weight="3"
        android:src="@mipmap/icon_notdisable"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_doze_on_tv"
        android:layout_weight="3"
        android:src="@mipmap/icon_notdisable"
        android:layout_gravity="center_vertical" />

</LinearLayout>
