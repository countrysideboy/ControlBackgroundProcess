<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        style="@style/mtextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全局功能开关,设置后重启生效，关闭的功能则不会再运行"
        android:id="@+id/setting_all_title" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/alert_backgroundshape" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp" >

            <Switch
                style="@style/mtextSize"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="服务/广播/唤醒锁/定时器"
                android:id="@+id/setting_allsw_service_broad_control"
                android:checked="false" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/line" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp" >

            <Switch
                style="@style/mtextSize"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="返回强退/后台墓碑/待机"
                android:id="@+id/setting_allsw_backstop_mubei_control"
                android:checked="false" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/line"
            android:visibility="visible" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp" >

            <Switch
                style="@style/mtextSize"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="IFW阻止服务/活动/广播"
                android:id="@+id/setting_allsw_ifw_control"
                android:checked="false" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/line"
            android:visibility="visible" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp" >

            <Switch
                style="@style/mtextSize"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="最近任务保留/杀死/模糊/隐藏"
                android:id="@+id/setting_allsw_recentcard_control"
                android:checked="false" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/line"
            android:visibility="visible" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:visibility="visible" >

            <Switch
                style="@style/mtextSize"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="应用锁/启动控制/常驻内存"
                android:id="@+id/setting_allsw_autostart_lock_control"
                android:checked="false" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/line"
            android:visibility="visible" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:visibility="visible" >

            <Switch
                style="@style/mtextSize"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="冻结/卸载控制/数据清除"
                android:id="@+id/setting_allsw_uninstall_ice_control"
                android:checked="false" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/line" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:visibility="visible" >

            <Switch
                style="@style/mtextSize"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="框架禁用/反检测"
                android:id="@+id/setting_allsw_xpblacklist_control"
                android:checked="false" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/line" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:visibility="visible" >

            <Switch
                style="@style/mtextSize"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="网络/位置/权限"
                android:id="@+id/setting_allsw_privacy_control"
                android:checked="false" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/line" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:visibility="visible" >

            <Switch
                style="@style/mtextSize"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="广告/通知/对话框"
                android:id="@+id/setting_allsw_adskip_control"
                android:checked="false" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/line" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:visibility="visible" >

            <Switch
                style="@style/mtextSize"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="强制打盹"
                android:id="@+id/setting_allsw_doze_control"
                android:checked="false" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/line" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:visibility="visible" >

            <Switch
                style="@style/mtextSize"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="界面控制"
                android:id="@+id/setting_allsw_ui_control"
                android:checked="false" />
        </FrameLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/line" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:visibility="visible" >

            <Switch
                style="@style/mtextSize"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="CPU设置"
                android:id="@+id/setting_allsw_cpuset_control"
                android:checked="false" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/line" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:visibility="visible" >

            <Switch
                style="@style/mtextSize"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="杂项"
                android:id="@+id/setting_allsw_others_control"
                android:checked="false" />
        </FrameLayout>

    </LinearLayout>
</LinearLayout>
