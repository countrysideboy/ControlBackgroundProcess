<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/slider_bg1"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/nav_header_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/main_nav_lefttop_ll"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="应用控制器"
        android:textSize="20dp"
        android:id="@+id/head_bigtitle_tv"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/head_subtitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="van134"
        android:textSize="12dp"
        android:textColor="@color/uncheck_color"
        android:layout_marginTop="4dp" />
    <TextView
        android:id="@+id/head_threetitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="van134"
        android:textSize="12dp"
        android:textColor="@color/uncheck_color"
        android:layout_marginTop="-1dp"
        android:paddingBottom="4dp" />

</LinearLayout>
