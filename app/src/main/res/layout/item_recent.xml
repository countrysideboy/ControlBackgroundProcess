<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="20">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/round"
                android:id="@+id/item_recent_appicon"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_recent_iceicon"
                android:src="@mipmap/ice" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/item_recent_appname"
            android:textStyle="bold"
            android:maxLines="2"
            android:maxLength="25"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_recent_notclean"
        android:layout_weight="3"
        android:src="@mipmap/icon_notdisable"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_recent_forcestop"
        android:layout_weight="3"
        android:src="@mipmap/icon_notdisable"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_recent_blur"
        android:layout_weight="3"
        android:src="@mipmap/icon_notdisable"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_recent_notshow"
        android:layout_weight="3"
        android:src="@mipmap/icon_notdisable"
        android:layout_gravity="center_vertical" />

</LinearLayout>
