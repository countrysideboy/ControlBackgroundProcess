<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <item android:state_pressed="true">
            <shape>
                <solid android:color="@color/transhalfwhite"/>
            </shape>
        </item>

        <item android:state_checked="true">
           <shape
                    android:shape="rectangle">
                    <gradient
                        android:angle="90"
                        android:endColor="@color/transhalf_nav"
                        android:centerColor="@color/transhalfwhite_nav"
                        android:startColor="@color/transhalf_nav"
                        android:type="linear" />
                </shape>
        </item>

        <item android:state_pressed="false">
            <shape>
                <solid android:color="@color/trans"/>
            </shape>
        </item>

</selector>