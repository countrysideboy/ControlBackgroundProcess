<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.click369.controlbp">
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />
    <uses-permission android:name="android.permission.FORCE_STOP_PACKAGES" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT"/>
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 添加快捷方式 -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <!-- 移除快捷方式 -->
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR"/>
    <application
        android:allowBackup="true"
        android:name=".activity.MyApp"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposedminversion"
            android:value="54" />
        <meta-data
            android:name="xposeddescription"
            android:value="会用则功能很强大，不会用则处处BUG，自己体会。" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:taskAffinity=""
            android:windowSoftInputMode="stateHidden|stateUnchanged">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RunningActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:finishOnTaskLaunch="false"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:theme="@style/liveactivity">
            <intent-filter>
                <category android:name="controlbp" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.EmptyActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:finishOnTaskLaunch="false"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/liveactivity">
            <intent-filter>
                <category android:name="controlbp" />
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="com.click369.controlbp.emptyactivity" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DebugActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:finishOnTaskLaunch="false"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/liveactivity">
        </activity>
        <activity
            android:name=".activity.LimitForceCleanActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:finishOnTaskLaunch="false"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/liveactivity">
            <intent-filter>
                <category android:name="controlbp" />
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="com.click369.controlbp.forcecleanactivity" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ShowDialogActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:finishOnTaskLaunch="false"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/liveactivity">

        </activity>
        <activity
            android:name=".activity.IceRoomActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|stateUnchanged"
            android:theme="@style/AppTheme.translucent" >
            <intent-filter>
                <category android:name="controlbp" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AppConfigActivity"
            android:screenOrientation="portrait"
            android:excludeFromRecents="true"
            android:exported="true"
            android:finishOnTaskLaunch="false"
            android:windowSoftInputMode="stateHidden|stateUnchanged"
            android:theme="@style/AppTheme.translucent" >
            <intent-filter>
                <category android:name="controlbp" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CPUSetActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:excludeFromRecents="true"
            android:windowSoftInputMode="stateHidden|stateUnchanged">
            <intent-filter>
                <category android:name="controlbp" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.IFWCompActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|stateUnchanged"></activity>
        <activity android:name=".activity.DozeWhiteListActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden|stateUnchanged"></activity>
        <activity android:name=".activity.ColorNavBarActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden|stateUnchanged"></activity>
        <activity android:name=".activity.ADBTestActivity"  android:windowSoftInputMode="stateHidden|stateUnchanged"></activity>
        <activity android:name=".activity.ColorSetActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.UIBarBlackListActivity" android:screenOrientation="portrait"  android:windowSoftInputMode="stateHidden|stateUnchanged"></activity>
        <activity android:name=".activity.WakeLockActivity" android:screenOrientation="portrait"  android:windowSoftInputMode="stateHidden|stateUnchanged"></activity>
        <activity android:name=".activity.AlarmActivity" android:screenOrientation="portrait"  android:windowSoftInputMode="stateHidden|stateUnchanged"></activity>
        <activity android:name=".activity.ChangeTextActivity" android:screenOrientation="portrait"  android:windowSoftInputMode="stateHidden|stateUnchanged"></activity>
        <activity android:name=".activity.SkipDialogActivity" android:screenOrientation="portrait"  android:windowSoftInputMode="stateHidden|stateUnchanged"></activity>
        <activity android:name=".activity.UnLockActivity"
            android:exported="true"
            android:excludeFromRecents="true"
            android:theme="@style/translucent" >
            <intent-filter>
                <action android:name="com.click369.control.lockapp"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SetPWDActivity"
            android:exported="true"
            android:excludeFromRecents="true"
            android:theme="@style/translucent" >
        </activity>
        <service
            android:name=".service.NewWatchDogService"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/run_service_config" />
        </service>
        <service
            android:name=".service.NotificationService"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>
        <service
            android:name=".service.WatchDogService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.click369.service"/>
            </intent-filter>
        </service>
        <service
            android:name=".service.DebugService"
            android:exported="true">
        </service>
        <service
            android:name=".service.ColorNavBarService"
            android:exported="true"></service>
        <service
            android:name="com.click369.controlbp.service.RoundedCornerService" >
        </service>
        <service
            android:name=".service.MyTileService"
            android:icon="@drawable/icon_doze"
            android:label="打盹开关"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        <service
            android:name=".service.AppConfigFromStatusService"
            android:icon="@drawable/icon_config"
            android:label="应用控制"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        <receiver
            android:name=".receiver.AddAppReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".receiver.BootStartReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="com.click369.control.test" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".receiver.PhoneStateReciver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" /> />
            </intent-filter>
        </receiver>

    </application>

</manifest>